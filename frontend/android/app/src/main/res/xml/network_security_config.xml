<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow all domains for HTTPS -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust preinstalled CAs -->
            <certificates src="system" />
            <!-- Trust user-added CAs (optional for debug) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Explicitly allow our domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">farahdent.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
